{
	"name": "Feel The Bern",
	"version": "1.0.0",
	"homepage_url": "http://devpost.com/software/feel-the-bern-np2d3x#",
	"description": "A Chrome Extension that Berns your Browser",
	"icons": {"128" : "img/Bernie_128.png",
			  "48"  : "img/Bernie_48.png",
			  "32"  : "img/Bernie_32.png",
			  "16"  : "img/Bernie_16.png"}, 

	"browser_action": {
		"default_icon": "Bernie.png",
		"default_title": "Feel the Bern"
	},
	"permissions": [
		"activeTab"
		],
	"background": {
		"scripts": ["background.js", "Feel-the-Bern.js"],
		"persistent": false
	},
	"manifest_version": 2
	
}